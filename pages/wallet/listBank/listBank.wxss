/* 暂无银行卡 */
.Bank {
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.Bank>image {
    width: 220rpx;
    height: 220rpx;
}


/* 银行卡列表 */
.bankList{
    width: 95%;
    height: 220rpx;
    margin: 20rpx auto;
    position: relative;
}

.BankImgae{
    width: 100%;
    height: 220rpx;
    border-radius: 15rpx;
}

.bankCard{
    width: 100%;
    height: 220rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.bankCard>.bc-box1{
    width: 100%;
    height: 50%;
    padding: 20rpx 40rpx;
    display: flex;
    justify-content: start;
    align-items: center;
    position: relative;
}

.closer{
    width: 55rpx;
    height: 55rpx;
    position: absolute;
    right: 40rpx;
}

.closers{
    width: 55rpx;
    height: 55rpx;
}

.check{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    right: 40rpx;
    background-color: white;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bankCard>.bc-box1>.box1-image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bankCard>.bc-box1>.box1-image>image{
    width: 50rpx;
    height: 50rpx;
}

.bankCard>.bc-box1>.box1-text{
    font-size: 32rpx;
    color: white;
    font-weight: bold;
    margin-left: 30rpx;
}

.bankCard>.bc-box2{
    width: 100%;
    height: 50%;
    font-size: 36rpx;
    color: white;
    font-weight: bold;
    padding: 40rpx;
}


/* 添加银行卡 */
.addBank {
    width: 95%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    font-weight: bold;
    border-radius: 15rpx;
    margin: 20rpx auto;
    background: linear-gradient(180deg, #FF9966 0%, #FFC0A1 33%, #FFC0A1 68%, #FFA982 100%);
}

/* 暂无银行卡 */
.noBank{
    width: 260rpx;
    height: 260rpx;
    margin: 100rpx auto;
}

.noBank>image{
    width: 100%;
    height: 100%;
}