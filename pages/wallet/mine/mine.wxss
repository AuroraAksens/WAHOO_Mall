/* 顶部卡片 */
.topCard {
    width: 100%;
    height: 350rpx;
    border-radius: 20rpx;
    overflow: hidden;
    margin-top: 20rpx;
    position: relative;
}

.topCard>image {
    width: 100%;
    height: 100%;
    z-index: -1;
}

.topCard>.cardBox {
    width: 100%;
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    left: 0;
}

.topCard>.cardBox>.t-box {
    width: 100%;
    height: 175rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 30rpx 50rpx;
}

.topCard>.cardBox>.t-box>.t-box-but {
    width: 175rpx;
    height: 70rpx;
    border-radius: 35rpx;
    background: linear-gradient(180deg, #FF9966 0%, #FFC0A1 33%, #FFC0A1 68%, #FFA982 100%);
    text-align: center;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #46291F;
    font-weight: bold;
}



/* 钱包选项卡 */
.tab {
    width: 100%;
    background-color: white;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.04);
    margin-top: 30rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 30rpx;
}

.tab>.tc1 {
    width: 15%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.tab>.tc1>image {
    width: 65rpx;
    height: 65rpx;
    border-radius: 50rpx;
}


.tab>.tc2 {
    width: 65%;
    display: flex;
    justify-content: start;
    align-items: start;
    flex-direction: column;
    padding: 20rpx 20rpx;
}

.tab>.tc2>.m-tc1 {
    font-size: 28rpx;
    font-weight: bold;
    color: #46291F;
    padding-bottom: 20rpx;
}

.tab>.tc2>.m-tc2 {
    font-size: 22rpx;
    font-weight: bold;
    color: #46291f6c;
}

.tab>.tc3 {
    width: 20%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #DE8E6A;
    font-weight: bold;
}