/* 搜索框 */
.search {
  width: 100%;
  height: 70rpx;
  border-radius: 50rpx;
  border: 1rpx solid;
  text-align: center;
  line-height: 70rpx;
  border: 1px solid #707070af;
  font-size: 24rpx;
  font-weight: bold;
  color: #46291fb2;
}


/* 轮播图 */
.banner {
  width: 100%;
  height: 305rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  /* overflow: hidden; */
}
.banner>.swiper{
  width: 100%;
  height: 100%;
}

.swiImg {
  width: 100%;
  height: 100%;
  /* height: 320rpx; */
  border-radius: 20rpx;
}


/* 上新产品 */
.newsProduct {
  width: 100%;
  margin-top: 40rpx;
  padding-bottom: 260rpx;
}


.newsProduct>.newsbody {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.newsProduct>.newsbody>.nbbox {
  width: 31%;
  display: flex;
  justify-content: start;
  align-items: start;
  flex-direction: column;
  overflow: hidden;
  border-radius: 15rpx;
  background: #FFFFFF;
  box-shadow: 0px 1px 12px rgba(0, 0, 0, 0.08);
}

.newsProduct>.newsbody>.nbbox>image {
  width: 100%;
  height: 220rpx;
}

.newsProduct>.newsbody>.nbbox>.m-nbox {
  padding-left: 8rpx;
  padding-bottom: 6rpx;
  padding-top: 6rpx;
  overflow: hidden;
}



/* 商城 */
.Mall{
  width: 100%;
  margin-top: 40rpx;
}

.Mall>.boxTitle{
  width: 100%;
  position: relative;
}

.Mall>.boxTitle>.more{
  position: absolute;
  right: 0;
  color: #46291fb2;
  font-size: 26rpx;
}

.mallbody{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.mallbody>.body-box{
  width: 46%;
  height: 290rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  margin-left: 11rpx;
  margin-right: 11rpx;
  box-shadow: 0px 1px 12px rgba(0, 0, 0, 0.11);
  position: relative;
}

.mallbody>.body-box>image{
  width: 100%;
  height: 100%;
}

.mallbody>.body-box>.m-box{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  /* background-color: #05050586; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.mallbody>.body-box>.m-box>.box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  color: white;
  background-color: rgba(0, 0, 0, 0.329);
  text-align: center;
  line-height: 150rpx;
}


/* 新事 */
.fresh{
  width: 100%;
  margin-top: 30rpx;
}


.fresh>.boxTitle{
  width: 100%;
  position: relative;
}

.fresh>.boxTitle>.more{
  position: absolute;
  right: 0;
  color: #46291fb2;
  font-size: 26rpx;
}

.fresh>.freshbody{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.fresh>.freshbody>.f-box{
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  margin-top: 30rpx;
  box-shadow: 0px 1px 12px rgba(0, 0, 0, 0.16);
}

.fresh>.freshbody>.f-box>image{
  width: 100%;
  height: 375rpx;
}

.fresh>.freshbody>.f-box>.bottomTitle{
  width: 100%;
  display: flex;
  justify-content: start;
  align-items: flex-start;
  flex-direction: column;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}











