page{
    background-color: #F5F4F4;
}

.topBJ{
    width: 100%;
    height: 250rpx;
    position: absolute;
    top: 1;
    left: 0; 
    z-index: -1;
}


/* 顶部名片 */
.topCard{
    width: 95%;
    z-index: 10;
    margin: auto;
}

.topCard>.tc1{
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    margin-top: 10rpx;
}

.topCard>.tc1>view{
    font-size: 30rpx;
    color: white;
    font-weight: bold;
}

.topCard>.tc2{
    width: 100%;
    height: 220rpx;
    margin-top: 5rpx;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    justify-content: start;
    align-items: center;
    padding-left: 30rpx;
}


.topCard>.tc2>image{
    width: 130rpx;
    height: 130rpx;
    border-radius: 10rpx;
}

.topCard>.tc2>.t-name{
    width: 300rpx;
    height: 130rpx;
    display: flex;
    justify-content: start;
    align-items: start;
    flex-direction: column;
    padding-left: 20rpx;
}

.topCard>.tc2>.t-name>.name1{
    font-size: 30rpx;
    font-weight: bold;
    color: #46291F;
    padding-top: 20rpx;
}

.topCard>.tc2>.t-name>.name2{
    font-size: 28rpx;
    font-weight: bold;
    color: #FFC0A1;
    padding-top: 20rpx;
}

.topCard>.tc2>.t-moy{
    height: 130rpx;
    display: flex;
    justify-content: start;
    align-items: start;
    flex-direction: column;
}

.topCard>.tc2>.t-moy>.moy1{
    font-size: 28rpx;
    color: #919191;
    font-weight: bold;
    padding-top: 20rpx;

}

.topCard>.tc2>.t-moy>.moy2{
    font-size: 24rpx;
    color: #DE8E6A;
    font-weight: bold;
    padding-top: 20rpx;

}


/* 主体 */
.moy-body{
    width: 95%;
    border-radius: 20rpx;
    background-color: white;
    margin: 30rpx auto;
    padding: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.moy-body>.m-box{
    width: 100%;
    display: flex;
    justify-content: start;
    align-items: center;
    font-size: 28rpx;
    font-weight: bold;
    padding: 10rpx 0;
}

.moy-body>.m-box>.leftText{
    width: 260rpx;
}

.moy-body>.m-box>.rightText{
    width: 400rpx;
}

.zahnwu{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: gray;
    line-height: 100rpx;
    margin-top: 20rpx;
}