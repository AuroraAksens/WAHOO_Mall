/* 活动公告 */
.notice {
    width: 95%;
    height: 435rpx;
    border-radius: 20rpx;
    background-color: white;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 10px 20px rgba(229, 229, 229, 0.16);
    margin: 30rpx auto;
}

.notice>image {
    width: 100%;
    height: 320rpx;
}

.notice>.no-box {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 30rpx;
}

.notice>.no-box>.b1 {
    width: 100%;
    font-size: 28rpx;
    color: black;
    font-weight: bold;

}

.notice>.no-box>.b2 {
    width: 100%;
    font-size: 22rpx;
    color: #ADADAC;
    margin-top: 20rpx;
}