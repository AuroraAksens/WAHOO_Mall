/* 订单模块 */
.card {
    width: 100%;
    margin-top: 30rpx;
    background: #FFFFFF;
    box-shadow: 0px 10px 20px rgba(107, 104, 104, 0.16);
    padding: 40rpx;
    border-radius: 20rpx;
    position: relative;
}

.card>.top {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 2rpx solid #F6F6F6;
    padding-bottom: 30rpx;
}

.card>.top>.left {
    color: #F84F4F;
    font-weight: bold;
    font-size: 28rpx;
}

.card>.top>.right {
    position: absolute;
    right: 0;
    border-radius: 30rpx 0 0 30rpx;
    background-color: #FAD8C7;
    padding: 15rpx 30rpx;
    font-weight: bold;
}

.card>.body {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20rpx;
}

.card>.body>image {
    width: 255rpx;
    height: 175rpx;
    border-radius: 10rpx;
}

.card>.body>.b-box {
    width: 300rpx;
    display: flex;
    justify-content: start;
    align-items: flex-start;
    flex-direction: column;
    line-height: 40rpx;
    margin-right: 10rpx;
}

.card>.bottom {
    width: 100%;
    display: flex;
    justify-content: start;
    align-items: flex-start;
    flex-direction: column;
}

.card>.bottom>.b-ti {
    width: 100%;
    display: flex;
    justify-content: start;
    align-items: center;
    line-height: 80rpx;
}

.card>.bottom>.b-user {
    width: 100%;
    display: flex;
    justify-content: start;
    align-items: center;
}

.card>.bottom>.b-user>image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50rpx;
}

.card>.bottom>.b-user>.name{
    font-size: 26rpx;
    font-weight: bold;
    margin-left: 20rpx;
}

.card>.bottom>.b-but {
    width: 160rpx;
    height: 50rpx;
    border-radius: 15rpx;
    background: linear-gradient(80deg, #FF9966 0%, #FFC0A1 33%, #FFC0A1 68%, #FFA982 100%);
    text-align: center;
    line-height: 50rpx;
    font-weight: bold;
    color: #46291F;
    font-size: 24rpx;
}


